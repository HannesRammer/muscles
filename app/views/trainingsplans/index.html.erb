
<h1>Trainingsplans</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th ><%=t('view') %></th>
      <th ><%=t('edit') %></th>
      <th ><%=t('delete') %></th>
    </tr>
  </thead>

  <tbody>
    <% @trainingsplans.each do |trainingsplan| %>
      <tr>
        <td class="trainingsplan_name"><%= trainingsplan.name %>
          <%#= image_tag("muskelman.svg", :class => "multi_pic") %>

        </td>
        <td><%= link_to t('view'), trainingsplan  %></td>
        <td><%#= link_to t('edit'), edit_trainingsplan_path(trainingsplan) %></td>
        <td><%= link_to "Destroy", trainingsplan, method: :delete, data: { confirm: "Are you sure?" } if creator_of_trainingsplan%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

