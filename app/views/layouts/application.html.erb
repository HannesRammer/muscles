<%#= javascript_include_tag :application  %>
<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track": "reload" %>
<%= javascript_include_tag "application", "data-turbolinks-track": "reload" %>


<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<%#= javascript_include_tag "modernizr-1.6.min" %>
<% cookies["style"] ? style = cookies["style"] : style = "dark" %>
<body id="body" class="theme_<%= style %>">
<%= link_to "Eigene Trainingspläne", user_trainingsplans_path %>
<%= link_to "Alle Übungen", exercises_all_path %>
<%= link_to "Start", root_path %>
<script>
  $( document ).on( "mousemove", function( event ) {
      $( "#mouseX" ).attr("value",event.pageX);
      $( "#mouseY" ).attr("value",event.pageY);
      //$( "#log" ).text( "pageX: " + event.pageX + ", pageY: " + event.pageY );
  });
</script>
<input type="hidden" id="mouseX" value=""/>
<input type="hidden" id="mouseY" value=""/>
<%= render "layouts/drop_style" %>  <br/>

<!--script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script-->
<div id="outer_container" class="nice_outer_tab">
  <div id="login_box">
    <%= link_to("Log In", login_path, :class => "nice_inset_tab") unless logged_in? %>
    <%= link_to("Sign Up", sign_up_path, :class => "nice_inset_tab") unless logged_in? %>
    <%= link_to("Log Out", logout_path, :class=>"nice_inset_tab") if logged_in? %>
  </div>
  <div id="container"><br/>

    <% if logged_in? %>
      <div id="open_training" class="open_training" onclick="toggleTraining()"><%= vertical_text("Training") %></div>
    <% end %>
    <div id="training" class="hidden_training"><%= render "main/user_selected" %></div>

    <div id="open_exercise" class="open_exercise" onclick="toggleExercise()"><br/><br/> <%= vertical_text("-") %></div>
    <div id="exercise" class="hidden_exercise"></div>

    <%#= render("shared/header", :locals => {:cont_name => "contact"}) %>
    <div id="muscle"></div>
    <div id="notice"><%= flash[:notice] %></div>


    <%= yield :layout %>

    <%#= render "layouts/donation" %>
    <div id="trainingsplanlist" style="display: none;
        top: 318px;
        left: 1015px;
        position: absolute;
        border: 1px solid black;
        padding: 5px;
        background: lightgrey;">

    </div>
  </div>
</div>
