<div id="signup">
  <% t('signup') %>

  <p>Already have an account? <%= link_to t('login'), login_path %>.</p>

  <%= form_for @user do |f| %>
    <%= render "shared/error_messages", :target => @user %>
    <p>
      <%#= f.label :username %>
      <%#= f.text_field :username %>
    </p>
    <p>
      <%= f.label :email, "Email Address" %>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>
    </p>
    <p><%= f.submit t('signup') %></p>
  <% end %>


  <p> <%= link_to "forgot password?", forgot_pw_path %></p>
</div>