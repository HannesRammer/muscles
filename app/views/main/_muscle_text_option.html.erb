<div id="muscle_text_option" class="exercise_page">
  <div id="m_primary">
    <h3>primary muscles</h3>
    <% @p_muscles.each do |muscle| %>
      <div class="muscle_text_option" onmouseover="hover('<%=muscle.en_name%>');">
        <%= link_to(muscle.en_name, {:controller => "main", :action => "muscle", :name => muscle.en_name, :title => "#{muscle.en_name} auswählen"}, {:remote => true, :method => :post}) %>
      </div>
    <% end %>
  </div>
  <div id="m_secondary">
