<%# p_exercises = @muscles.blank? ? [] : @muscles[0].primary_exercises %>
<%# s_exercises = @muscles.blank? ? [] : @muscles[0].secondary_exercises %>
<%# a_exercises = @muscles.blank? ? [] : @muscles[0].antagonist_exercises %>

<% if @exercises %>
  <div>

    <% @exercises.each do |exercise| %>
      <div class="exercises_text_div">
        <%#=user_muscle_pics(exercise.primary_muscles,nil,2,"") %>
        <%#=user_muscle_pics(exercise.secondary_muscles,nil,1,"") %>
        <div class="main_exercises_text">

          <% if @trainingsplan && @trainingsplan != nil %>
            <%#= @trainingsplan.name %>
            <%= add_to_list_with_trainingsplan(exercise, @trainingsplan) %>
          <% else %>

            <%= add_to_list_link(exercise) %>
          <% end %>

          <%= link_to(exercise.name, {:controller => "main", :action => "exercise",
                                      :name => exercise.name, :title => "#{exercise.name} ausw채hlen"},
                      {:style => "color:black;display:grid;",
                       :remote => true, :method => :post}) %>

          <%#= link_to("show", :url=>{:controller=>"main", :action=>"show_exercise", :exercise=>s.id}, :remote=>true) %>
        </div>


      </div>
    <% end %>
  </div>
<% else %>


  <% if @primary %>
    <div>

      <h3>primary</h3>
      <% @primary.each do |exercise| %>
        <div class="exercises_text_div">
          <div class="main_exercises_text">
            <%= add_to_list_link(exercise) %>
            <%= link_to(exercise.name, {:controller => "main", :action => "exercise", :name => exercise.name, :title => "#{exercise.name} ausw채hlen"}, {:remote => true, :method => :post}) %>

            <%#= link_to("show", :url=>{:controller=>"main", :action=>"show_exercise", :exercise=>s.id}, :remote=>true) %>
          </div>

        </div>
      <% end %>
    </div>
  <% end %>
  <% if @secondary %>
    <div>
      <h3>secondary</h3>
      <% @secondary.each do |exercise| %>
        <div class="exercises_text_div">

          <div class="main_exercises_text">
            <%= add_to_list_link(exercise) %>
            <%= link_to(exercise.name, {:controller => "main", :action => "exercise", :name => exercise.name, :title => "#{exercise.name} ausw채hlen"}, {:remote => true, :method => :post}) %>

            <%#= link_to("show", :url=>{:controller=>"main", :action=>"show_exercise", :exercise=>s.id}, :remote=>true) %>
          </div>

        </div>
      <% end %>
    </div>
  <% end %>
  <% if @antagonist %>

    <div>
      <h3>antagonist</h3>
      <% @antagonist.each do |exercise| %>
        <div class="exercises_text_div">
          <div class="main_exercises_text">
            <%= add_to_list_link(exercise) %>

            <%= link_to(exercise.name, {:controller => "main", :action => "exercise", :name => exercise.name, :title => "#{exercise.name} ausw채hlen"}, {:remote => true, :method => :post}) %>

            <%#= link_to("show", :url=>{:controller=>"main", :action=>"show_exercise", :exercise=>s.id}, :remote=>true) %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>