</div>

<div id="e_primary" >
  <% p_exercises.each do |s| %>
      <div class="exercises_text" onclick="selected_exercise('<%=s.name%>');" onmouseover="this.style.cursor='pointer';" title="<%= s.name %> anzeigen">
        <%= s.name %>
        <%= link_to(image_tag("icons/add.png"),{:controller=>"main", :action=>"add_exercise", :exercise=>s.id, :title => "Zum Trainingsplan hinzuf端gen"}, {:remote=>true, :method=>:post} ) %>
        <%#= link_to("show", :url=>{:controller=>"main", :action=>"show_exercise", :exercise=>s.id}, :remote=>true) %>
      </div>

  <% end %>
</div>


<div id="e_secondary" <%= p_exercises.blank? && !s_exercises.blank? ? '' : 'style="display:none"'%>>
