<div style="display: grid; place-items: center;">
  <div id="reset_pw">
    <p><%= t('reset_new_pw') %></p>
    <div class="table_container">

      <%= form_with(url: "/passwords/reset", method: "post") do |f| %>
        <table>
          <tr>
            <td>
              <p>change password for</p>
            </td>
            <td>
              <%= params[:email] %>
              <%= f.hidden_field :email, :value => params[:email] %>
              <%= f.hidden_field :token, :value => params[:token] %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :password, "Chose new password" %>

            </td>
            <td>
              <%= f.password_field :password %>
            </td>
          </tr>
        </table>
        <p><%= f.submit t('reset_new_pw') %></p>
      <% end %>
    </div>
  </div>
</div>
