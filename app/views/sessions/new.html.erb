<div id="login">
<% "Log in" %>

<p>Don't have an account? <%= link_to t('signup'), sign_up_path %></p>

<%= form_tag sessions_path do |form|%>
  <p>
    <%= label_tag :email, "Email Address" %>
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
  <p><%= submit_tag t('login') %></p>

  <p> <%= link_to "forgot password?", forgot_pw_path%></p>

<% end %>
</div>